{% autoescape false %}
# Action for running tests
# This file has been automatically created.
# To recreate it you can run this command
# ./console generate:test-action {% if plugin %}--plugin {{ plugin }} {% endif %}--php-versions="{{ phpVersions|join(',') }}" {% if enableRedis and plugin %}--enable-redis{% endif %}

name: {% if plugin %}Plugin {{ plugin }}{% else %}Matomo{% endif %} Tests

on:
  pull_request:
    types: [opened, synchronize]
  push:
    branches:
      - '**.x-dev'
{% if not plugin %}
      - 'next_release'
{% endif %}
  workflow_dispatch:

permissions:
  actions: read
  checks: none
  contents: read
  deployments: none
  issues: read
  packages: none
  pull-requests: read
  repository-projects: none
  security-events: none
  statuses: none

concurrency:
  group: php-${{ '{{' }} github.ref {{ '}}' }}
  cancel-in-progress: true

jobs:
{% if not plugin %}
  PHP:
    runs-on: ubuntu-20.04
    strategy:
      fail-fast: false
      matrix:
        type: [ 'UnitTests', 'SystemTestsPlugins' ,'SystemTestsCore' , 'IntegrationTestsCore', 'IntegrationTestsPlugins' ]
        php: [ '{{ phpVersions|join("', '") }}' ]
        adapter: [ 'PDO_MYSQL', 'MYSQLI' ]
{% if phpVersions|length > 1 %}
        exclude:
{% for version in phpVersions %}
          - php: '{{ version }}'
            adapter: '{% if loop.first %}MYSQLI{% else %}PDO_MYSQL{% endif %}'
{% endfor %}
{% endif %}
    steps:
      - uses: actions/checkout@v3
        with:
          lfs: false
          persist-credentials: false
{% if not plugin %}
          submodules: true
          path: matomo
{% endif %}
      - name: running tests
        uses: matomo-org/github-action-tests@main
        with:
          test-type: ${{ '{{' }} matrix.type {{ '}}' }}
          mysql-driver: ${{ '{{' }} matrix.adapter {{ '}}' }}
          php-version: ${{ '{{' }} matrix.php {{ '}}' }}
{% if enableRedis %}
          redis-service: true
{% endif %}
{% elseif hasPluginTests %}
  PluginTests:
    runs-on: ubuntu-20.04
    strategy:
      fail-fast: false
      matrix:
        php: [ '{{ phpVersions|join("', '") }}' ]
        target: ['minimum_required_matomo', '4.x-dev']
    steps:
      - uses: actions/checkout@v3
        with:
          lfs: true
          persist-credentials: false
      - name: Run tests
        uses: matomo-org/github-action-tests@main
        with:
          plugin-name: '{{ plugin }}'
          php-version: ${{ '{{' }} matrix.php {{ '}}' }}
          test-type: 'PluginTests'
          matomo-test-branch: ${{ '{{' }} matrix.target {{ '}}' }}
          artifact-pass: ${{ '{{' }} secrets.ARTIFACTS_PASS {{ '}}' }}
{% endif %}

{%- if not plugin or hasJavaScriptTests %}
  Javascript:
    runs-on: ubuntu-20.04
{% if plugin %}
    strategy:
      fail-fast: false
      matrix:
        target: ['minimum_required_matomo', '4.x-dev']
{% endif %}
    steps:
      - uses: actions/checkout@v3
        with:
          lfs: false
          persist-credentials: false
{% if not plugin %}
          submodules: true
          path: matomo
{% endif %}
      - name: running tests
        uses: matomo-org/github-action-tests@main
        with:
{% if plugin %}
          plugin-name: '{{ plugin }}'
          matomo-test-branch: ${{ '{{' }} matrix.target {{ '}}' }}
{% endif %}
          test-type: 'JS'
          php-version: '{{ phpVersions|first }}'
          node-version: '12'
{% endif %}

{%- if not plugin %}
  Angular:
    runs-on: ubuntu-20.04
    steps:
      - uses: actions/checkout@v3
        with:
          lfs: false
          persist-credentials: false
{% if not plugin %}
          submodules: true
          path: matomo
{% endif %}
      - name: running tests
        uses: matomo-org/github-action-tests@main
        with:
          test-type: 'Angular'
          node-version: '16'
          mysql-service: false
{% endif %}

{%- if not plugin or hasUITests %}
  UI:
    runs-on: ubuntu-20.04
{% if not plugin %}
    strategy:
      fail-fast: false
      matrix:
        parts: [ 0,1,2 ]
{%  endif %}
    steps:
      - uses: actions/checkout@v3
        with:
          lfs: true
          persist-credentials: false
{% if not plugin %}
          submodules: true
          path: matomo
{% endif %}
      - name: running tests
        uses: matomo-org/github-action-tests@main
        with:
{% if plugin %}
          plugin-name: '{{ plugin }}'
          matomo-test-branch: '4.x-dev'
{% else %}
          ui-test-options: '--num-test-groups=3 --test-group=${{ '{{' }} matrix.parts {{ '}}' }}'
{% endif %}
          test-type: 'UI'
          php-version: '{{ phpVersions|first }}'
          node-version: '16'
          artifact-pass: ${{ '{{' }} secrets.ARTIFACTS_PASS {{ '}}' }}
{% if enableRedis %}
          redis-service: true
{% endif %}
{% endif %}
{% endautoescape  %}